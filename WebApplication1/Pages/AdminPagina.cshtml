@page
@model WebApplication1.Pages.AdminPagina

<div class="row">
    @foreach (var uitgave in Model.Stripboeken)
    {
        <div style="background: white; border: solid 1px black" class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center flex-column">
            <p class="m-auto">ISBN: @uitgave.isbn</p>
            <p class="m-auto">Titel: @uitgave.naam</p>
            <form method="post">
            <button asp-page="adminPagina" asp-page-handler="Verwijderen" asp-route-id="@uitgave.isbn">Verwijder</button>
            </form>
        </div>
    }
</div>
