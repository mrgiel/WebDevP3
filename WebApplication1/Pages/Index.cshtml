@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="content">
    <div class="kut-imgs">
        <div class="new-content">
            <div class="banner-2">
                <div class="banner-b2">
                    <a href="/StripboekToevoegen"><i style="float:right" class="fa-solid fa-upload"></i><h5>Upload</h5></a>
                    <h4>Stripboeken Collectie</h4>
                </div>

            </div>
            <div class="strip-content">
                <div class="row">
                    @foreach (var stripboek in Model.data)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-3">
                            <div class="mt-4">
                                <div class="image">
                                    <p class="text-white text-center" style="">
                                        <img src="@stripboek.afbeelding_url" alt="" border="0">
                                        <div class="text-white text-center"><span>@stripboek.Uitgave.naam (@stripboek.datum.Year)</span></div>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

