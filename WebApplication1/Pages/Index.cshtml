@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="row text-white">
        @foreach (var stripboek in Model.data)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="row">
                    <img src="@stripboek.afbeelding_url" style="width: 300px; height: 300px" alt=""/>
                </div>
                <p class="">@stripboek.Uitgave.Reeks.reeks_naam @stripboek.Uitgave.naam</p>
                </div>
        }
    </div>
</div>
