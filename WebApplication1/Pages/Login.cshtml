@page
@model WebApplication1.Pages.LoginModel
@inject SignInManager<IdentityUser> SignInManager
@using Microsoft.AspNetCore.Identity
@{
}
@if (SignInManager.IsSignedIn(User))
{
    Response.Redirect("Index");
}


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3 text-white">Inloggen</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label text-white" asp-for="Model.UserName">Gebruikersnaam</label>
                    <input type="text" asp-for="Model.UserName" class="form-control" />
                    <span asp-validation-for="Model.UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" asp-for="Model.Password">Wachtwoord</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input" />
                    <label class="form-check-label text-white" asp-for="Model.RememberMe">Onthoud mij?</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>