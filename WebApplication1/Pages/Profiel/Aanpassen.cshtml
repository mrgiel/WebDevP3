@page
@model WebApplication1.Pages.Profiel.AanpassenModel
@{
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Gebruikersnaam</label>
                <input asp-for="Gebruiker.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <div class="input-group">
                    <input asp-for="Gebruiker.Email" class="form-control" />
                    <span class="input-group-addon" aria-hidden="true"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}