@page
@model WebApplication1.Pages.Profiel.MijnProfielModel
@{
}

<h1>
    @Html.DisplayFor(model => model.Gebruiker.UserName)
</h1>

<div class="content">
    <form method="post">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4 my-2">
                <h3 class="mb-3">Naam</h3>
                <input asp-for="Gebruiker.UserName" value="@Html.DisplayFor(model => model.Gebruiker.UserName)" class="form-control" type="text" minlength="1" maxlength="50" />

                <div class="my-2">
                    <h3 class="mb-3">Rol</h3>
                   
                </div>
                <div class="my-2">
                    <h3 class="mb-3">E-mail</h3>
                    <input asp-for="Gebruiker.Email" value="@Html.DisplayFor(model => model.Gebruiker.Email)" class="form-control" type="text" minlength="1" maxlength="50" />
                </div>

                <div class="mt-3">
                    <button type="submit" class="align-content-center" asp-page="GebruikersAanpassen" asp-page-handler="Send">Opslaan</button>
                </div>

            </div>
        </div>
    </form>
</div>
