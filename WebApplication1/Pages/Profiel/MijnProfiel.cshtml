@page
@model WebApplication1.Pages.Profiel.MijnProfielModel
@inject SignInManager<IdentityUser> SignInManager
@using Microsoft.AspNetCore.Identity
@{
}

@if (!SignInManager.IsSignedIn(User))
{
    Response.Redirect("../Login");
}


<h4>@ViewData["Title"]</h4>

<div class="content">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-2 text-left">
        </div>
        <div class="col-md-8 text-center">
            <h2 class="mb-3">Beheer je account </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="menu-style mt-5">
                <ul class="menu">
                    <a href="MijnProfiel"><li>Profiel</li></a>
                    <a href="WachtwoordAanpassen"><li>Wachtwoord</li></a>
                </ul>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-6">
                    <form id="profile-form" class="mt-4" method="post">
                        <div class="form-group">
                            <h3 class="mb-3">Gebruikersnaam</h3>
                            <input asp-for="Gebruiker.UserName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h3 class="mt-3">E-mail</h3>
                            <input asp-for="Gebruiker.Email" type="email" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Opslaan</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


