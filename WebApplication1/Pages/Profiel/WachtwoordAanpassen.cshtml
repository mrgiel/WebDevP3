@page
@model WebApplication1.Pages.Profiel.WachtwoordAanpassenModel
@inject SignInManager<IdentityUser> SignInManager
@using Microsoft.AspNetCore.Identity
@{
}

@if (!SignInManager.IsSignedIn(User))
{
    Response.Redirect("../Login");
}

<div class="content">
    <div class="row">
        <div class="col-md-2 text-left">
        </div>
        <div class="col-md-8 text-center">
            <h2 class="mb-3">Wachtwoord Aanpassen </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="menu-style mt-5">
                <ul class="menu">
                    <a href="MijnProfiel"><li>Profiel</li></a>
                    <a href="WachtwoordAanpassen"><li>Wachtwoord</li></a>
                </ul>
            </div>
        </div>

        <div class="col-md-8">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-6">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <h3 class="mb-3">Oud Wachtwoord</h3>
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3 class="mt-3">Nieuw Wachtwoord</h3>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3 class="mt-3">Bevestig Wachtwoord</h3>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Update Wachtwoord</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
