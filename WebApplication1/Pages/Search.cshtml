@page
@model WebApplication1.Pages.Search

@{
    ViewData["Title"] = "SearchFunction";
}

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
<form method="post">
    <button type="submit" asp-page-handler="Search"></button>
</form>

<ul>
    @foreach (var uitgave in Model.Stripboeken)
    {
        <li> @uitgave.Isbn -- @uitgave.Naam -- @uitgave.Versie_nr -- @uitgave.Jaar -- @uitgave.Prijs</li>
    }
</ul>

