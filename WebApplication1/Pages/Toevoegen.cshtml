@page
@model WebApplication1.Pages.Shared.Stripboeken_Toevoegen

@{
    ViewData["Title"] = "Toevoegen";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>

    <div class="container text-white">
        <br/>
        <h1 class="text-center">Stripboek Toevoegen</h1>
        <br/>
        <form method="post">
            <div>
                @if (@Model.Error)
                {
                    <script>
                    alert("Error, Zorg ervoor dat alle velden goed zijn ingevuld");
                    </script>
                }

            </div>
            <div class="row">
                <div class="col-6">
                    <h3 class="text-white">ISBN</h3>
                    <input class="form-control" asp-for="ISBN" type="text" value="" placeholder="9032005235"/>
                    <span asp-validation-for="ISBN"></span>
                </div>
                <div class="col-6">
                    <h3 class="text-white">Reeks</h3>
                    <input class="form-control" asp-for="reeksUser" type="text" placeholder="Donald Duck"/>
                    <span asp-validation-for="reeksUser"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <h3 class="text-white">Titel</h3>
                    <input class="form-control" asp-for="naam" type="text" placeholder="Als Cowboy"/>
                    <span asp-validation-for="naam"></span>
                </div>
                <div class="col-6">
                    <h3 class="text-white">Jaar</h3>
                    <input class="form-control" asp-for="jaar" type="text" value="" placeholder="1990"/>
                    <span asp-validation-for="jaar"></span>
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <h3 class="text-white">Hoogte</h3>
                    <input class="form-control" asp-for="hoogte" value="" type="text" placeholder="22 (cm)"/>
                    <span asp-validation-for="hoogte"></span>
                </div>
                <div class="col-6">
                    <h3 class="text-white">Prijs</h3>
                    <input class="form-control" asp-for="prijs" value="" type="text" placeholder="5,99 (euro)"/>
                    <span asp-validation-for="prijs"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <h3 class="text-white">Uitgever</h3>
                    <input class="form-control" asp-for="uitgever" type="text" placeholder="DPG Media"/>
                    <span asp-validation-for="uitgever"></span>
                </div>
                <div class="col-6">
                    <h3 class="text-white mx-auto">Sensueel</h3>
                    <br/>
                    <input class="mx-auto" asp-for="NSFW" type="checkbox"/>
                                                            <span asp-validation-for="NSFW"></span>
                </div>
            </div>
            <br/>
            <div class="col-3 mx-auto">
                <button type="submit" class="form-control align-content-center" asp-page-handler="Send">Versturen</button>
            </div>
        </form>

    </div>


</div>
</body>
</html>
